{
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        //"Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "{Timestamp:HH:mm:ss} [{Level:w3}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "Path": "C:\\logs\\InternetSpeedTest\\InternetSpeedTest-.log",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} [{Level:w3}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 4194304,
          "retainedFileCountLimit": 20,
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "myConn": "data source=.\\MSSQLSERVER01;Trusted_Connection=True;MultipleActiveResultSets=False;"
  }
}
